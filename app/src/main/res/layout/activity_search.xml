<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:padding="5dp"
    android:gravity="center_horizontal"
    tools:context="com.example.quytocngheo.myapplication.SearchActivity"
    tools:ignore="MissingPrefix">
    <EditText
        android:id="@+id/activity_search_et_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:hint="Tìm kiếm ở đây"
        android:drawableLeft="@drawable/ic_back"
        android:elevation="1dp"
        fontPath="fonts/Raleway-Bold.ttf"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:id="@+id/activity_search_tv_1km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_circle"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="1 Km"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textSize="15sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/activity_search_tv_2km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_circle"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="3 Km"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textSize="15sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/activity_search_tv_3km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_circle"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="5 Km"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:id="@+id/activity_search_tv_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_circle"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="food"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textSize="15sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/activity_search_tv_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_circle"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="drink"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
